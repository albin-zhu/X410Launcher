<mah:MetroWindow x:Class="X410Launcher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:X410Launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Settings" Height="240" Width="320">
    <DockPanel>
        <GroupBox Header="Startup" DockPanel.Dock="Top">
            <StackPanel>
                <CheckBox IsChecked="{Binding StartupStartX410}" Content="Start X410 on startup." />
                <CheckBox IsChecked="{Binding StartupUpdateX410}" Content="Update X410 on startup." />
                <CheckBox IsChecked="{Binding StartupAddIconToTray}" Content="Add X410 launcher to system tray on startup." />
            </StackPanel>
        </GroupBox>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" VerticalAlignment="Bottom" DockPanel.Dock="Bottom">
            <Button x:Name="OkButton" Content="OK" Width="80" IsDefault="true" Click="OkButton_Click" />
        </StackPanel>
    </DockPanel>
</mah:MetroWindow>
